.modal
	.modal_container#get-price
		.modal_content
			.modal_header
				h2.modal_title Получить прайс
			
			.modal_content-width
				form(action="#" method="post" data-type="get-price").form.__green
					.form_field-wrap: input(type="text" name="name" placeholder="Ваше имя").form_text-field.js-validate
					.form_field-wrap: input(type="text" name="email" placeholder="Ваш e-mail или номер телефона").form_text-field.js-validate.__tel-or-email
					.form_actions
						button(type="submit").btn Получить прайс

		a(href="#").modal_close

	.modal_overlay